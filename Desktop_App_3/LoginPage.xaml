<Window x:Class="Desktop_App_3.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_App_3"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Grid>
        <Label x:Name="UsernameLabel_Login" Content="Username" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,98,0,306"/>
        <Label x:Name="PasswordLabel_Login" Content="Password" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,182,0,222"/>
        <TextBox Margin="0,133,0,263" x:Name="UsernameInputBox_Login" Width="223" HorizontalAlignment="Center"/>
        <TextBox Margin="0,217,0,179" x:Name="PasswordInputBox_Login" Width="224" HorizontalAlignment="Center"/>
        <Button Content="Login" Click="Login_Button_Click" Margin="0,295,0,85" HorizontalAlignment="Center" Width="188"/>
    </Grid>
</Window>
